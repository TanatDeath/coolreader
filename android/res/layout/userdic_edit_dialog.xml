<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/table"
            style="@style/TextAppearance.Small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_weight="10"
            android:layout_margin="2dp"
            >
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lbl_dic_word"
                        style="@style/TextAppearance.Small"
                        android:textColor="?attr/colorIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textStyle="bold"
                        android:text="@string/ud_word" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/dic_word"
                        style="@style/TextAppearance.Widget.EditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:editable="true"
                        android:singleLine="false"
                        android:maxLines="5"
                        android:selectAllOnFocus="true"
                        android:text="" />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/lbl_dic_word_translate"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:layout_marginRight="5dp"
                            android:singleLine="false"
                            android:textStyle="bold"
                            android:text="@string/ud_word_translate" />
                    <Button
                            android:id="@+id/btn_transl_more"
                            android:layout_height="wrap_content"
                            android:tag="tint"
                            android:layout_margin="3dp"
                            android:textColor="?attr/colorIcon"
                            style="@style/TextAppearance.Medium"
                            android:text="..." />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <EditText
                            android:id="@+id/dic_word_translate"
                            style="@style/TextAppearance.Widget.EditText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:editable="true"
                            android:singleLine="false"
                            android:maxLines="5"
                            android:selectAllOnFocus="true"
                            android:text="" />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/lbl_lang"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:textStyle="bold"
                            android:singleLine="false"
                            android:text="@string/ud_lang" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <EditText
                            android:id="@+id/ud_lang"
                            style="@style/TextAppearance.Widget.EditText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:editable="true"
                            android:singleLine="true"
                            android:selectAllOnFocus="true"
                            android:text="" />
                </LinearLayout>
            </TableRow>
            <TableRow
                    android:layout_weight="1"
                    >
                <Button
                        android:id="@+id/btn_is_ud"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:layout_weight="1"
                        android:drawableLeft="?attr/attr_cr3_toc_item_normal"
                        android:tag="tint"
                        android:textColor="?attr/colorIcon"
                        style="@style/TextAppearance.Medium"
                        android:text="@string/ud_is_ud" />
                <Button
                        android:id="@+id/btn_is_cite"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:checked="false"
                        android:layout_weight="1"
                        android:tag="tint"
                        android:textColor="?attr/colorIcon"
                        style="@style/TextAppearance.Medium"
                        android:text="@string/ud_is_cite" />
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/lbl_seen_count"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:singleLine="false"
                            android:textStyle="bold"
                            android:text="@string/ud_seen_count" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/ud_seen_count"
                            style="@style/TextAppearance.Widget.EditText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="" />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/lbl_create_time"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:singleLine="false"
                            android:textStyle="bold"
                            android:text="@string/ud_create_time" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/ud_create_time"
                            style="@style/TextAppearance.Widget.EditText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="" />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/lbl_last_access_time"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:singleLine="false"
                            android:textStyle="bold"
                            android:text="@string/ud_last_access_time" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/ud_last_access_time"
                            style="@style/TextAppearance.Widget.EditText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="" />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/lbl_context"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:singleLine="false"
                            android:textStyle="bold"
                            android:text="@string/ud_short_context" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <EditText
                            android:id="@+id/ud_context"
                            style="@style/TextAppearance.Widget.EditText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:singleLine="false"
                            android:maxLines="5"
                            android:selectAllOnFocus="true"
                            android:text="" />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/lbl_full_context"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:singleLine="false"
                            android:textStyle="bold"
                            android:text="@string/ud_full_context" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <EditText
                            android:id="@+id/ud_full_context"
                            style="@style/TextAppearance.Widget.EditText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:singleLine="false"
                            android:maxLines="5"
                            android:selectAllOnFocus="true"
                            android:text="" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>
