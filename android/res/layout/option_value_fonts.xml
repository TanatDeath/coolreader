<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/option_item_body"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingRight="?android:attr/scrollbarSize"
    >

    <RadioButton
        android:id="@+id/option_value_check"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="false"
        android:focusableInTouchMode="false"
    />
    <ImageView
        android:id="@+id/option_value_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="4dip"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
        android:layout_weight="1">

        <TableLayout
                android:id="@+id/table_value_text"
                style="@style/TextAppearance.Small"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:layout_weight="10"
                android:layout_margin="2dp"
                >
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <TextView
                        style="@style/TextAppearance.Medium"
                        android:id="@+id/option_value_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?attr/colorIcon"
                        android:text="@string/font_test_phrase"
                        android:layout_weight="10"
                        android:ellipsize="end"
                        android:maxLines="4" />
                <ImageView
                        android:id="@+id/option_value_del"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dip"
                        android:layout_marginLeft="2dip"
                        android:layout_gravity="center_vertical|right"
                        android:layout_centerVertical="true"
                        android:src="?attr/cr3_button_cancel_drawable"
                        android:tag="tint"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="true"
                        android:background="@null"
                        android:layout_weight="1"
                        />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/table_add_text1"
            style="@style/TextAppearance.Small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/table_value_text"
            android:layout_alignLeft="@id/table_value_text"
            android:stretchColumns="1"
            android:layout_weight="10"
            android:layout_margin="2dp"
            >

        </TableLayout>
    </RelativeLayout>

</LinearLayout>
