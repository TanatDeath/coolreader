<?xml version="1.0" encoding="utf-8"?>
<!--
   Comment bookmark item
-->

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tag_flow_item_body"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:layout_marginTop="3dip"
    android:layout_marginBottom="3dip"
    android:layout_marginLeft="2dip"
    android:layout_marginRight="2dip"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    >
    <TextView
            android:id="@+id/tag_flow_item_text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorIcon"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="_"
        />
    <LinearLayout android:id="@+id/tag_flow_item_btns_body"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="2dip"
            android:baselineAligned="false">
        <ImageView
                android:id="@+id/tag_flow_value_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_marginLeft="2dip"
                android:layout_centerVertical="true"
                android:src="?attr/attr_icons8_cancel_small"
                android:tag="tint"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:background="@null"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                />
    </LinearLayout>
</LinearLayout>