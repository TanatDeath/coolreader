<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_dialog"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:minWidth="1200dip"
    android:layout_height="fill_parent">
    <LinearLayout
            android:id="@+id/base_dlg_upper_text_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
        <TextView android:id="@+id/base_dlg_upper_text"
                style="@style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_marginBottom="2dip"
                android:layout_marginRight="2dip"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:singleLine="false"
                android:textColor="?attr/colorIcon"
                android:text="Test"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/base_dlg_button_panel"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:layout_margin="5dip"
	    android:minWidth="?android:attr/listPreferredItemHeight"
	    android:gravity="center_vertical"
	    android:paddingRight="?android:attr/scrollbarSize"
        android:paddingStart="?android:attr/scrollbarSize"
        android:paddingEnd="?android:attr/scrollbarSize"
        android:background="?attr/tabbarBackground">

        <ImageButton
            android:id="@+id/base_dlg_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="@null"
            android:contentDescription="@string/dlg_button_back"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:tag="tint"
            android:src="?attr/cr3_button_prev_drawable" />
        <TextView android:id="@+id/base_dlg_title"
            style="@style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:layout_marginBottom="4dip"
            android:layout_marginRight="4dip"
            android:layout_marginLeft="4dip"
            android:layout_weight="1"
            android:singleLine="false"
            android:textColor="?attr/colorIcon"
            android:text="Test"/>
        <ImageButton android:id="@+id/base_dlg_btn_positive"
            android:layout_margin="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:src="?attr/cr3_button_ok_drawable"
            android:tag="tint"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@null"
            android:contentDescription="@string/dlg_button_ok"/>
        <ImageButton android:id="@+id/base_dlg_btn_negative"
            android:layout_margin="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:tag="tint"
            android:src="?attr/cr3_button_cancel_drawable"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@null"
            android:contentDescription="@string/dlg_button_cancel"/>
        <ImageButton android:id="@+id/base_dlg_btn_add"
            android:layout_margin="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:src="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@null"
            android:contentDescription="@null"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/base_dialog_content_view"
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="100"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip">
    </FrameLayout>
</LinearLayout>
