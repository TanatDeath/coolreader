<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="?android:attr/scrollbarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dip">

        <TextView
            android:textColor="?attr/colorIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Small"
            android:text="@string/litres_long_tap"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            />

        <TableLayout
            android:id="@+id/table"
            style="@style/TextAppearance.Small"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            android:layout_weight="10"
            android:layout_margin="2dp"
            >
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/lbl_username"
                            style="@style/TextAppearance.Small"
                            android:singleLine="false"
                            android:maxLines="3"
                            android:text="@string/litres_username"
                            android:textColor="?attr/colorIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <EditText
                            android:id="@+id/lites_username"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text=""
                            android:hint="@string/litres_username"
                            style="@style/TextAppearance.Widget.EditText"
                            android:editable="true"
                            android:singleLine="true"
                            />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/lbl_password"
                            style="@style/TextAppearance.Small"
                            android:singleLine="false"
                            android:maxLines="3"
                            android:text="@string/litres_password"
                            android:textColor="?attr/colorIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <EditText
                            android:id="@+id/lites_password"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text=""
                            android:hint="@string/litres_password"
                            style="@style/TextAppearance.Widget.EditText"
                            android:editable="true"
                            android:singleLine="true"
                            />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lbl_test_connect"
                        style="@style/TextAppearance.Small"
                        android:singleLine="false"
                        android:maxLines="3"
                        android:text="@string/test_connect"
                        android:textColor="?attr/colorIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_test_connect"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/test"
                        android:layout_margin="3dip"
                        android:textColor="?attr/colorIcon"
                        style="@style/TextAppearance.Widget.EditText"
                        />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>