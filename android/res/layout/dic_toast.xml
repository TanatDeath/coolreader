<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dic_toast_ll"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="?attr/attr_toast_layout_border"
              android:orientation="horizontal" android:gravity="center"
    >
    <TableLayout
        android:id="@+id/dic_table"
        style="@style/TextAppearance.Small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_weight="10"
        android:layout_margin="2dp"
        >
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tr_upper_row"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:id="@+id/upper_row_ll"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|left"
                    android:layout_weight="8"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:maxHeight="?android:attr/listPreferredItemHeightSmall"
                    android:orientation="horizontal">
                <Button
                        android:id="@+id/upper_row_tv_more"
                        style="@style/TextAppearance.Small"
                        android:singleLine="true"
                        android:layout_marginRight="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorIcon"
                        android:text="@string/more"
                        />
                <Button
                        android:id="@+id/upper_row_tv_full"
                        style="@style/TextAppearance.Small"
                        android:singleLine="true"
                        android:layout_marginRight="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorIcon"
                        android:text="@string/full_article"
                        />
                <Button
                        android:id="@+id/upper_row_tv_full_web"
                        style="@style/TextAppearance.Small"
                        android:singleLine="true"
                        android:layout_marginRight="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorIcon"
                        android:text="@string/full_article_web"
                        />
                <Button
                        android:id="@+id/upper_row_tv_close"
                        style="@style/TextAppearance.Small"
                        android:singleLine="true"
                        android:layout_marginRight="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorIcon"
                        android:text="@string/close"
                        />
            </LinearLayout>
        </TableRow>
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tr_upper_sep_row"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:id="@+id/left_stop_ll"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_margin="2dip"
                        android:id="@+id/sepRow"
                        />
            </LinearLayout>
        </TableRow>
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dic_row"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:id="@+id/dic_ll"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2"
                    android:orientation="vertical">
                <org.coolreader.crengine.MaxHeightScrollView
                        android:id="@+id/dic_scrollV"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/dic_text"
                            style="@style/TextAppearance.Small"
                            android:singleLine="false"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorIcon"
                            />
                </org.coolreader.crengine.MaxHeightScrollView>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>