<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/ll_all_buttons"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:baselineAligned="false"
		android:layout_marginTop="3dip"
		android:layout_marginBottom="3dip"
		android:layout_marginLeft="2dip"
		android:layout_marginRight="2dip"
		>
		<TableLayout
				android:id="@+id/tl_calendar_stats_h"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:stretchColumns="*"
				android:orientation="vertical">

			<TableRow
					android:layout_weight="1">
				<Button android:id="@+id/btn_calendar_stats_prev"
						android:layout_width="0dip"
						android:layout_weight="1"
						android:text="&lt;&lt;&lt;"
						android:layout_height="wrap_content"
						android:singleLine="false"
						android:ellipsize="end"
						android:textColor="?attr/colorIcon"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:textStyle="bold"
						android:maxLines="5"
						/>
				<TextView android:id="@+id/tv_calendar_stats_month"
						android:layout_width="0dip"
						android:layout_weight="2"
						android:text="_"
						android:layout_height="wrap_content"
						android:singleLine="false"
						android:ellipsize="end"
						android:textColor="?attr/colorIcon"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:textStyle="bold"
						android:maxLines="5"
						android:gravity="center"
						android:layout_gravity="center" />
				<Button android:id="@+id/btn_calendar_stats_next"
						android:layout_width="0dip"
						android:layout_weight="1"
						android:text="&gt;&gt;&gt;"
						android:layout_height="wrap_content"
						android:singleLine="false"
						android:ellipsize="end"
						android:textColor="?attr/colorIcon"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:textStyle="bold"
						android:maxLines="5"
						/>
			</TableRow>
			<TableRow
					android:layout_weight="1">
				<TextView android:id="@+id/tv_calendar_stats_calc"
						android:layout_width="0dip"
						android:layout_weight="1"
						android:text="_"
						android:layout_height="wrap_content"
						android:singleLine="false"
						android:ellipsize="end"
						android:textColor="?attr/colorIcon"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:maxLines="5"
						android:gravity="center"
						android:layout_gravity="center" />
			</TableRow>
		</TableLayout>
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/article_list"
		android:orientation="vertical"
		android:layout_weight="8"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:baselineAligned="false"
		android:layout_marginTop="8dip"
		android:layout_marginBottom="8dip"
		android:layout_marginLeft="4dip"
		android:layout_marginRight="4dip"
		>

	</LinearLayout>

</LinearLayout>
