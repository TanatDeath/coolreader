<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/tl_action"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	>
	<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/row_up"
		android:layout_margin="2dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		>
		<ImageButton
				android:layout_margin="0dip"
				android:id="@+id/btn_up"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@null"
				android:tag="tint"
				android:src="?attr/attr_icons8_up_small"
				android:maxLines="1"
				android:ellipsize="end"
				>
		</ImageButton>
	</TableRow>
	<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/row_center"
			android:layout_margin="2dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			>
			<ImageButton
					android:layout_margin="0dip"
					android:id="@+id/btn_left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@null"
					android:tag="tint"
					android:src="?attr/attr_icons8_back_small"
					android:maxLines="1"
					android:ellipsize="end"
					>
			</ImageButton>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:id="@+id/ll_action"
				android:layout_margin="2dp"
				android:orientation="vertical">
				<ImageView
						android:id="@+id/iv_middle"
						android:layout_marginLeft="15dp"
						android:layout_marginRight="15dp"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="2dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@null"
						>
				</ImageView>
				<TextView
						android:layout_marginBottom="5dp"
						android:id="@+id/tv_middle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:src="@null"
						android:maxLines="3"
						android:ellipsize="end"
						android:textColor="?attr/colorIcon"
						style="@style/TextAppearance.Smaller"
						android:layout_gravity="center_horizontal"
						android:gravity="center_horizontal"
						android:text="tv_middle"
						>
				</TextView>
			</LinearLayout>
			<ImageButton
					android:layout_margin="2dip"
					android:id="@+id/btn_right"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@null"
					android:tag="tint"
					android:src="?attr/attr_icons8_forward_small"
					android:maxLines="1"
					android:ellipsize="end"
					>
			</ImageButton>
	</TableRow>
	<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/row_down"
			android:layout_margin="2dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			>
		<ImageButton
				android:layout_margin="0dip"
				android:id="@+id/btn_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@null"
				android:tag="tint"
				android:src="?attr/attr_icons8_down_small"
				android:maxLines="1"
				android:ellipsize="end"
				>
		</ImageButton>
	</TableRow>
</TableLayout>