<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_selection_toolbar_slider_bottom"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        >
    <TableLayout
            android:id="@+id/tl_slider_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="vertical">
        >
        <TableRow>
            <ImageButton android:id="@+id/btn_prev_sent_b"
                    style="@style/TextAppearance.Small"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="?attr/attr_icons8_minus_minus_small"
                    android:tag="tint"
                    android:background="?attr/colorThemeGray2"
                    android:layout_marginTop="2dip"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    />
            <ImageButton android:id="@+id/btn_prev_b"
                    style="@style/TextAppearance.Small"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="?attr/attr_icons8_minus_small"
                    android:tag="tint"
                    android:background="?attr/colorThemeGray2"
                    android:layout_marginTop="2dip"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    />
            <SeekBar android:id="@+id/selection_bound_control_b"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:layout_weight="6"
                    android:layout_marginTop="2dip"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:max="100"
                    android:progress="50"
                    />
            <ImageButton android:id="@+id/btn_next_b"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorThemeGray2Contrast"
                    android:tag="tint"
                    android:layout_marginTop="2dip"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:src="?attr/attr_icons8_plus_small"
                    />
            <ImageButton android:id="@+id/btn_next_sent_b"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorThemeGray2Contrast"
                    android:tag="tint"
                    android:layout_marginTop="2dip"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:src="?attr/attr_icons8_plus_plus_small"
                    />
        </TableRow>
    </TableLayout>
</LinearLayout>