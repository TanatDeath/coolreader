<?xml version="1.0" encoding="utf-8"?>
<!--
   Option item layout for CR3 options dialog
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toc_item_body"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dip"
    android:layout_marginBottom="2dip"
    android:baselineAligned="true"
    >

    <TextView android:id="@+id/toc_level_margin"
        style="@style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:text="    " 
        android:singleLine="true"
		android:textColor="?attr/colorIcon"
        android:layout_gravity="center_vertical|left" android:ellipsize="none"/>
    <ImageView android:id="@+id/toc_expand_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginRight="0dip"
        android:layout_marginLeft="0dip"
        android:src="?attr/attr_cr3_toc_item_collapsed"
        android:tag="tint"
        />
	<!--  LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:baselineAligned="true"
	    android:layout_marginTop="6dip"
	    android:layout_marginBottom="6dip"
	    android:layout_marginLeft="2dip"
	    android:layout_marginRight="6dip"
	    android:layout_gravity="center"-->

	    <TextView android:id="@+id/toc_title"
	        style="@style/TextAppearance.Medium"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:text="Chapter name may be very-very long" 
	        android:singleLine="true"
	        android:ellipsize="end"
		    android:layout_marginLeft="2dip"
		    android:layout_marginRight="4dip"
		    android:layout_marginTop="4dip"
		    android:layout_marginBottom="4dip"
	        android:layout_weight="80"
			android:textColor="?attr/colorIcon"
	        android:layout_gravity="center_vertical|fill_horizontal"
	         />
	<ImageView android:id="@+id/toc_show_page"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|left"
			android:layout_marginRight="2dip"
			android:layout_marginLeft="2dip"
			android:background="@null"
			android:src="?attr/attr_icons8_drop_down_no_frame_small"
			android:tag="tint"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:clickable="true"
			/>
    <!-- /LinearLayout-->
	    <TextView android:id="@+id/toc_page"
	        style="@style/TextAppearance.Medium"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:layout_marginLeft="4dip"
		    android:layout_marginRight="10dip"
		    android:layout_marginTop="4dip"
		    android:layout_marginBottom="4dip"
			android:text="12" 
	        android:singleLine="true"
	        android:layout_gravity="center_vertical|right"
			android:textColor="?attr/colorIcon"
	        android:ellipsize="none"/>
</LinearLayout>
