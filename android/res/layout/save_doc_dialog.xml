<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="?android:attr/scrollbarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*" >
 
	<LinearLayout
	  	android:orientation="vertical"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_margin="3dip">

	    <TableLayout
			android:id="@+id/table"
			style="@style/TextAppearance.Small"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:stretchColumns="1"
			android:layout_weight="10"
			android:layout_margin="2dp"
			>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:id="@+id/trow_file_exists1"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="#60808080"
					>
				<TextView
						android:layout_margin="5dp"
						style="@style/TextAppearance.Small"
						android:text="@string/external_doc_option3"
						android:textStyle="bold"
						android:singleLine="false"
						android:maxLines="3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="?attr/colorIcon"
						/>
			</TableRow>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:id="@+id/trow_file_exists2"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left|center_vertical"
						android:layout_weight="1"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/lbl_existing_path"
							style="@style/TextAppearance.Small"
							android:singleLine="false"
							android:maxLines="3"
							android:text="@string/already_exists"
							android:textStyle="bold"
							android:textColor="?attr/colorIcon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</LinearLayout>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left"
						android:layout_weight="3"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/existing_path"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="download path"
							android:maxLines="5"
							android:ellipsize="middle"
							style="@style/TextAppearance.Small"
							android:textColor="?attr/colorIcon"
							android:singleLine="false"
							/>
				</LinearLayout>
			</TableRow>
		</TableLayout>
	</LinearLayout>
</ScrollView>
