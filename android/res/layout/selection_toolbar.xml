<?xml version="1.0" encoding="utf-8"?>
<!--
   Option item layout for CR3 options dialog
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sel_body"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="?attr/colorThemeGray2"
	android:layout_marginTop="15dip"
	android:layout_marginBottom="15dip"
	android:layout_marginLeft="15dip"
	android:layout_marginRight="15dip"
    android:baselineAligned="true"
    >

	<LinearLayout
			android:id="@+id/top_line"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="top"
			android:layout_alignParentTop="true"
			>
	</LinearLayout>

	<LinearLayout
			android:id="@+id/middle_contents"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_below="@+id/top_line"
			android:gravity="top"
			>
		<RelativeLayout
				android:id="@+id/middle_contents_topmost"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>
			<ImageButton android:id="@+id/btn_goback"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="?attr/attr_icons8_goback"
					android:tag="tint"
					android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="1dip"
					android:contentDescription=""/>
			<ImageButton android:id="@+id/btn_visible"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="?attr/attr_icons8_visible"
					android:tag="tint"
					android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip"
					android:layout_marginLeft="1dip"
					android:layout_marginRight="10dip"
					android:layout_alignParentRight="true"
					android:contentDescription=""/>
		</RelativeLayout>
		<LinearLayout
			android:id="@+id/middle_contents_top"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1">
			<LinearLayout
					android:id="@+id/middle_contents_top_h"
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					>
				<View
						android:id="@+id/middle_contents_top_h1"
						android:layout_width="0dp"
						android:layout_height="fill_parent"
						android:layout_weight="1"
						>
				</View>
				<View
						android:id="@+id/middle_contents_top_h2"
						android:layout_width="0dp"
						android:layout_height="fill_parent"
						android:layout_weight="3"
						>
				</View>
				<View
						android:id="@+id/middle_contents_top_h3"
						android:layout_width="0dp"
						android:layout_height="fill_parent"
						android:layout_weight="3"
						>
				</View>
				<View
						android:id="@+id/middle_contents_top_h4"
						android:layout_width="0dp"
						android:layout_height="fill_parent"
						android:layout_weight="1"
						>
				</View>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
				android:id="@+id/middle_contents_bottom"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="0dp"
				android:layout_weight="2"
				>
			<LinearLayout
					android:id="@+id/middle_contents_bottom_h"
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					>
				<View
						android:id="@+id/middle_contents_bottom_h1"
						android:layout_width="0dp"
						android:layout_height="fill_parent"
						android:layout_weight="1"
						>
				</View>
				<View
						android:id="@+id/middle_contents_bottom_h2"
						android:layout_width="0dp"
						android:layout_height="fill_parent"
						android:layout_weight="3"
						>
				</View>
				<View
						android:id="@+id/middle_contents_bottom_h3"
						android:layout_width="0dp"
						android:layout_height="fill_parent"
						android:layout_weight="3"
						>
				</View>
				<View
						android:id="@+id/middle_contents_bottom_h4"
						android:layout_width="0dp"
						android:layout_height="fill_parent"
						android:layout_weight="1"
						>
				</View>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
			android:id="@+id/bottom_line"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			>
	</LinearLayout>
	<SurfaceView
			android:id="@+id/sv_surface"
			android:layout_width="1px"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:background="@null"
			android:layout_height="1px">
	</SurfaceView>

</RelativeLayout>
