<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_metro"
    android:layout_margin="2dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:layout_weight="1"
    >
	<LinearLayout
		android:id="@+id/left_station_ll"
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:gravity="center_vertical|center_horizontal"
		android:layout_weight="3"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/left_station_name"
			style="@style/TextAppearance.Small"
			android:singleLine="false"
			android:maxLines="15"
			android:layout_marginRight="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?attr/colorIcon"
			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/left_mark_ll"
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:gravity="center_vertical|center_horizontal"
		android:layout_weight="1"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/left_mark_name"
			style="@style/TextAppearance.Small"
			android:singleLine="false"
			android:maxLines="15"
			android:layout_marginRight="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="|"
			android:textColor="?attr/colorIcon"
			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/center_station_ll"
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:gravity="center_vertical|center_horizontal"
		android:layout_weight="5"
		android:orientation="horizontal">
		<TableLayout
			android:id="@+id/geo_table"
			style="@style/TextAppearance.Small"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:stretchColumns="1"
			android:layout_weight="10"
			android:layout_margin="2dp"
			>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/row_center1"
				android:layout_margin="0dip"
				android:gravity="center_vertical|center_horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				>
				<View
					android:layout_width="14dip"
					android:layout_height="14dip"
					android:layout_margin="4dip"
					android:id="@+id/metroColor"
					/>
				<TextView
					android:id="@+id/center_station_name"
					style="@style/TextAppearance.Small"
					android:singleLine="false"
					android:maxLines="15"
					android:textStyle="bold"
					android:layout_marginRight="5dip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="?attr/colorIcon"
					/>
			</TableRow>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/row_center2"
				android:layout_margin="0dip"
				android:gravity="center_vertical|center_horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				>
				<TextView
					android:id="@+id/center_station_dist"
					style="@style/TextAppearance.Small"
					android:singleLine="false"
					android:maxLines="15"
					android:layout_marginRight="5dip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="?attr/colorIcon"
					/>
			</TableRow>
		</TableLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/right_mark_ll"
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:gravity="center_vertical|center_horizontal"
		android:layout_weight="1"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/right_mark_name"
			style="@style/TextAppearance.Small"
			android:singleLine="false"
			android:maxLines="15"
			android:layout_marginRight="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="|"
			android:textColor="?attr/colorIcon"
			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/right_station_ll"
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:gravity="center_vertical|center_horizontal"
		android:layout_weight="3"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/right_station_name"
			style="@style/TextAppearance.Small"
			android:singleLine="false"
			android:maxLines="15"
			android:layout_marginRight="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?attr/colorIcon"
			/>
	</LinearLayout>
</TableRow>
