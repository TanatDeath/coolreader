<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:stretchColumns="*">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/base_dlg_button_panel"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dip"
			android:gravity="center_vertical"
			android:background="?attr/tabbarBackground"
			>
			<TableLayout
					android:id="@+id/tl_buttons_top"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:stretchColumns="1"
					android:orientation="vertical"
					android:layout_margin="0dip"
					>
				<TableRow
						android:layout_weight="1"
						>
					<ImageButton android:id="@+id/base_dlg_btn_back"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:src="?attr/cr3_button_prev_drawable"
						android:tag="tint"
						android:layout_margin="5dip"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@string/dlg_button_back"/>
					<ImageButton android:id="@+id/btn_open_book"
						android:layout_margin="5dip"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:src="?attr/attr_icons8_open_book"
						android:tag="tint"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@string/dlg_button_open_book"/>
					<ImageButton android:id="@+id/book_folder_open"
						android:layout_margin="5dip"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:src="?attr/cr3_button_folder_go_drawable"
						android:tag="tint"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@string/dlg_button_open_folder"/>
					<ImageButton android:id="@+id/book_create_shortcut"
						android:layout_margin="5dip"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:gravity="right"
						android:src="?attr/attr_icons8_book_link"
						android:tag="tint"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@string/mi_book_shortcut"/>
					<ImageButton android:id="@+id/book_edit"
						android:layout_margin="5dip"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:gravity="right"
						android:src="?attr/attr_icons8_book_edit"
						android:tag="tint"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@string/mi_book_edit"/>
					<ImageButton android:id="@+id/save_to_email"
						android:layout_margin="5dip"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:gravity="right"
						android:src="?attr/attr_icons8_send_by_email"
						android:tag="tint"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@string/save_current_book_to_cloud_email"/>
					<ImageButton android:id="@+id/save_to_ynd"
						android:layout_margin="5dip"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:gravity="right"
						android:src="?attr/attr_icons8_book_to_gd"
						android:tag="tint"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@string/save_current_book_to_cloud_ynd"/>
					<ImageButton android:id="@+id/book_delete"
						android:layout_margin="5dip"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:gravity="right"
						android:src="?attr/attr_icons8_book_minus"
						android:tag="tint"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@string/dlg_button_book_delete"/>
					<ImageButton android:id="@+id/book_custom_cover"
						android:layout_margin="5dip"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:gravity="right"
						android:src="?attr/attr_icons8_texture"
						android:tag="tint"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@string/dlg_button_book_custom_cover"/>
					<ImageButton android:id="@+id/btn_find_authors"
						android:layout_margin="5dip"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:gravity="right"
						android:src="?attr/attr_icons8_folder_author"
						android:tag="tint"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@null"/>
					<ImageButton android:id="@+id/book_download"
						android:layout_margin="5dip"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:gravity="right"
						android:src="?attr/attr_icons8_download_book"
						android:tag="tint"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:background="@null"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:contentDescription="@null"/>
				</TableRow>
			</TableLayout>
		</LinearLayout>
		<LinearLayout
				android:id="@+id/to_read_panel"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dip"
				android:gravity="center_vertical"
				>
			<Button
					android:layout_margin="5dip"
					android:id="@+id/btn_mark_toread"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="3dip"
					android:layout_marginRight="3dip"
					android:src="@null"
					android:maxLines="1"
					android:ellipsize="end"
					android:drawableLeft="@drawable/icons8_toc_item_normal"
					android:textColor="?attr/colorIcon"
					android:contentDescription="@string/book_mark_toread"
					android:text="@string/book_mark_toread" />
		</LinearLayout>>

		<uk.co.deanwild.flowtextview.FlowTextView
			android:id="@+id/lbl_annotation"
			style="@style/TextAppearance.Small"
			android:textColor="?attr/colorIcon"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dip"
			android:layout_marginBottom="5dip"
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip"
			>

			<ImageView
				android:id="@+id/book_cover"
				android:scaleType="fitCenter"
				android:minHeight="120dip"
				android:minWidth="100dip"
				android:maxHeight="200dip"
				android:maxWidth="150dip"
				android:drawable="?attr/cr3_browser_book_drawable"
       			android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				/>
		</uk.co.deanwild.flowtextview.FlowTextView>
	<LinearLayout
				android:id="@+id/ll_litres_purchase"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
			<TextView
					android:id="@+id/lbl_purchase"
					android:textStyle="bold"
					style="@style/TextAppearance.Small"
					android:singleLine="false"
					android:maxLines="3"
					android:text="@string/purchase_book"
					android:textColor="?attr/colorIcon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			<LinearLayout
					android:id="@+id/ll_litres_purchase_buttons"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">
				<Button
						android:layout_margin="5dip"
						android:id="@+id/btn_purchase"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="3dip"
						android:layout_marginRight="3dip"
						android:src="@null"
						android:maxLines="1"
						android:ellipsize="end"
						android:textColor="?attr/colorIcon"
						android:textStyle="bold"
						android:contentDescription=""
						android:text="..." />
			</LinearLayout>
		</LinearLayout>

		<TableLayout android:id="@+id/tl_downl_book"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginLeft="4dip"
				android:layout_marginRight="4dip"
				android:stretchColumns="1"
				android:layout_weight="10"
				>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:id="@+id/tr_downl_sel"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					>
				<Button
						android:id="@+id/btn_fragment"
						android:layout_width="0dip"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
						android:layout_weight="1"
						android:maxLines="2"
						android:ellipsize="end"
						android:textColor="?attr/colorIcon"
						android:contentDescription="@string/download_fragment"
						android:drawableLeft="@drawable/icons8_toc_item_normal"
						android:text="@string/download_fragment" />
				<Button
						android:id="@+id/btn_downl"
						android:layout_width="0dip"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
						android:layout_weight="1"
						android:maxLines="2"
						android:ellipsize="end"
						android:textColor="?attr/colorIcon"
						android:contentDescription="@string/download_book"
						android:drawableLeft="@drawable/icons8_toc_item_normal"
						android:text="@string/download_book" />
			</TableRow>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:id="@+id/tr_downl"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					>
				<Button
						android:id="@+id/btn_fb2"
						android:layout_width="0dip"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
						android:layout_weight="1"
						android:maxLines="2"
						android:ellipsize="end"
						android:textColor="?attr/colorIcon"
						android:contentDescription="@string/download_fb2"
						android:text="@string/download_fb2" />
				<Button
						android:id="@+id/btn_fb3"
						android:layout_width="0dip"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
						android:layout_weight="1"
						android:maxLines="2"
						android:ellipsize="end"
						android:textColor="?attr/colorIcon"
						android:contentDescription="@string/download_fb3"
						android:text="@string/download_fb3" />
			</TableRow>
		</TableLayout>

	<TextView
				android:id="@+id/lbl_profile"
				android:textStyle="bold"
				style="@style/TextAppearance.Small"
				android:singleLine="false"
				android:maxLines="3"
				android:text="@string/book_info_file_name"
				android:textColor="?attr/colorIcon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	<TableLayout
		android:id="@+id/table"
		style="@style/TextAppearance.Small"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:stretchColumns="1"
		android:layout_weight="10"
		android:layout_margin="2dp"
		></TableLayout>
	</LinearLayout>
</ScrollView>
