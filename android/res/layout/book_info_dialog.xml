<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:stretchColumns="*">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button android:id="@+id/btn_edit_info"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:text="@string/btn_edit_info"
				android:drawableLeft="?attr/attr_icons8_book_edit"
				android:contentDescription="@string/btn_edit_info"/>

			<Button android:id="@+id/btn_shortcut"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:text="@string/btn_shortcut"
				android:drawableLeft="?attr/attr_icons8_book_link"
				android:contentDescription="@string/btn_shortcut"/>

		</LinearLayout>
		<TextView
			android:id="@+id/lbl_annotation"
			style="@style/TextAppearance.Medium"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="false"
			android:textColor="?attr/colorIcon"
			android:layout_margin="5dip"
			android:clickable="true"
			/>

	<TableLayout
		android:id="@+id/table"
		style="@style/TextAppearance.Small"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:stretchColumns="1"
		android:layout_weight="10"
		android:layout_margin="2dp"
		></TableLayout>
	</LinearLayout>
</ScrollView>
