<?xml version="1.0" encoding="utf-8"?>
<!--
   Book item layout for CR3 file browser
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browser_item_body"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:paddingRight="?android:attr/scrollbarSize"
    android:layout_marginTop="3dip"
    android:layout_marginBottom="3dip"
    android:layout_marginLeft="2dip"
    android:layout_marginRight="2dip"
    >

    <ImageView android:id="@+id/book_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginRight="8dip"
        android:layout_marginLeft="4dip"
        />

    <LinearLayout android:id="@+id/browser_item_name_body"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="1dip"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:baselineAligned="false">


        <TextView android:id="@+id/book_name"
            style="@style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
	        android:layout_marginLeft="4dip"
	        android:layout_marginRight="4dip"
            android:singleLine="false"
            android:maxLines="3"
            android:layout_gravity="left" />
            
            
        <LinearLayout android:id="@+id/browser_item_misc_body"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:baselineAligned="false">

        <TextView android:id="@+id/browser_item_field1"
            style="@style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
	        android:layout_marginRight="8dip"
            android:singleLine="false"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_gravity="right" />
        <TextView android:id="@+id/browser_item_field2"
            style="@style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginRight="8dip"
            android:layout_weight="1"
            android:singleLine="false"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_gravity="right" />
    </LinearLayout>
            
            
    </LinearLayout>

    <LinearLayout android:id="@+id/browser_item_btns_body"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:layout_margin="2dip"
        android:baselineAligned="false">
        <ImageView android:id="@+id/btn_fav_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:layout_marginLeft="2dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="?attr/attr_icons8_fav_star"
            android:tag="tint"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:background="@null"
            android:layout_gravity="center_vertical|center_horizontal"
            />
        <ImageView android:id="@+id/btn_add_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:layout_marginLeft="2dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="?attr/attr_icons8_drop_down_no_frame_small"
            android:tag="tint"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:background="@null"
            android:layout_gravity="center_vertical|center_horizontal"
            />

    </LinearLayout>

</LinearLayout>
