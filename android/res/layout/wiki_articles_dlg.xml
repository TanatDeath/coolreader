<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/articles_list_ll1"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="1200dip"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
	android:background="?attr/attr_toast_layout_border"
    >
	<LinearLayout
			android:id="@+id/upper_row_ll"
			android:layout_width="match_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical|left"
			android:layout_weight="8"
			android:minHeight="?android:attr/listPreferredItemHeightSmall"
			android:maxHeight="?android:attr/listPreferredItemHeightSmall"
			android:orientation="horizontal">
		<Button
				android:id="@+id/upper_row_tv_more"
				style="@style/TextAppearance.Small"
				android:singleLine="true"
				android:layout_marginRight="5dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="?attr/colorIcon"
				android:text="@string/more"
				/>
		<Button
				android:id="@+id/upper_row_tv_close"
				style="@style/TextAppearance.Small"
				android:singleLine="true"
				android:layout_marginRight="5dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="?attr/colorIcon"
				android:text="@string/close"
				/>
	</LinearLayout>
	<org.coolreader.crengine.MaxHeightLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/articles_list"
		android:orientation="vertical"
		android:layout_weight="8"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:baselineAligned="false"
		android:layout_marginTop="8dip"
		android:layout_marginBottom="8dip"
		android:layout_marginLeft="4dip"
		android:layout_marginRight="4dip"
		>
	</org.coolreader.crengine.MaxHeightLinearLayout>
</LinearLayout>