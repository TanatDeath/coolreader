<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/option_item_body"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:paddingRight="?android:attr/scrollbarSize"
    >

    <ImageView android:id="@+id/option_value_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dip"
        android:layout_marginLeft="2dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="?attr/attr_icons8_texture"
        android:tag="tint"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:background="@null"
        />
    <ImageView
        android:id="@+id/option_value_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:focusable="false"
        android:focusableInTouchMode="false"
    />
    <TextView
      style="@style/TextAppearance.Medium"
      android:id="@+id/option_value_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:singleLine="false"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:maxLines="5"
      android:layout_centerVertical="true"
    />
    <LinearLayout android:id="@+id/browser_item_btns_body"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="2dip"
            android:baselineAligned="false">
        <ImageView
                android:id="@+id/btn_option_add_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_marginLeft="2dip"
                android:layout_centerVertical="true"
                android:src="?attr/attr_icons8_option_info"
                android:tag="tint"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:background="@null"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                />
        <ImageView
                android:id="@+id/option_value_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_marginLeft="2dip"
                android:layout_centerVertical="true"
                android:src="?attr/cr3_button_cancel_drawable"
                android:tag="tint"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:background="@null"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                />
    </LinearLayout>
    <ImageView android:id="@+id/option_value_image"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_gravity="center_vertical|right"
        android:layout_margin="4dip"
        android:layout_centerVertical="true"
    />

</LinearLayout>
