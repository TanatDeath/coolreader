<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/toast_ll_wrap"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:background="?attr/attr_toast_layout_border"
              android:orientation="vertical" android:gravity="center"
    >
    <TextView android:id="@+id/toast_wrap" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:padding="5dip"
              android:clickable="true"
        />
    <TextView android:id="@+id/toast_2nd_line" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:padding="5dip"
            android:clickable="true"
            android:maxLines="2"
            android:ellipsize="end"
            />
</LinearLayout>