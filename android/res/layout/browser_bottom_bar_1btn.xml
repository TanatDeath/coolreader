<?xml version="1.0" encoding="utf-8"?>
<!-- LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"-->
<LinearLayout  android:id="@+id/ll_browser_bottom_bar_litres"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TableLayout
            android:id="@+id/tl_bottom_bar_litres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:orientation="vertical">

        <TableRow
                android:layout_weight="1"
                >

            <LinearLayout  android:id="@+id/ll_browser_bottom_bar"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:minWidth="16dip"
            >
                <ProgressBar
                        android:id="@+id/progress_b"
                        style="@android:style/Widget.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        />
            </LinearLayout>

            <ImageButton android:id="@+id/btn_scroll_up"
                    android:layout_margin="5dip"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minWidth="?android:attr/listPreferredItemHeight"
                    android:src="?attr/attr_icons8_drop_up_no_frame_small"
                    android:tag="tint"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@null"/>

            <ImageButton android:id="@+id/btn_scroll_down"
                    android:layout_margin="5dip"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minWidth="?android:attr/listPreferredItemHeight"
                    android:src="?attr/attr_icons8_drop_down_no_frame_small"
                    android:tag="tint"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@null"
                    />

            <ImageButton android:id="@+id/btn_show_menu"
                    android:layout_margin="5dip"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minWidth="?android:attr/listPreferredItemHeight"
                    android:src="?attr/attr_icons8_menu_small"
                    android:tag="tint"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@null"
                    />

        </TableRow>
    </TableLayout>

</LinearLayout>