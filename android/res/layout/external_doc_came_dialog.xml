<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="?android:attr/scrollbarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*" >
 
	<LinearLayout
	  	android:orientation="vertical"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_margin="3dip">

	    <TableLayout
			android:id="@+id/table"
			style="@style/TextAppearance.Small"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:stretchColumns="1"
			android:layout_weight="10"
			android:layout_margin="2dp"
			>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left"
						android:layout_weight="3"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/ext_path"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="file name"
							android:maxLines="5"
							android:ellipsize="middle"
							style="@style/TextAppearance.Small"
							android:textColor="?attr/colorIcon"
							android:singleLine="false"
							/>
				</LinearLayout>
			</TableRow>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left|center_vertical"
						android:layout_weight="1"
                        android:layout_marginBottom="3dip"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/lbl_doc_type"
							style="@style/TextAppearance.Small"
							android:singleLine="false"
							android:maxLines="3"
							android:text="@string/doc_type"
							android:textStyle="bold"
							android:textColor="?attr/colorIcon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</LinearLayout>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left"
						android:layout_weight="3"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/doc_type"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="file name"
							android:maxLines="5"
							android:ellipsize="middle"
							style="@style/TextAppearance.Small"
							android:textColor="?attr/colorIcon"
							android:singleLine="false"
							/>
				</LinearLayout>
			</TableRow>
			<TableRow
					android:id="@+id/trow_text_or_html">
                <Button
                        android:id="@+id/btn_as_html"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2dip"
                        android:tag="tint"
                        android:textColor="?attr/colorIcon"
                        android:contentDescription="@null"
						android:drawableLeft="@drawable/icons8_toc_item_normal"
                        android:text="@string/open_as_html" />
                <Button
                        android:id="@+id/btn_as_text"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2dip"
                        android:textColor="?attr/colorIcon"
                        android:tag="tint"
                        android:contentDescription="@null"
						android:drawableLeft="@drawable/icons8_toc_item_normal"
                        android:text="@string/open_as_text" />
			</TableRow>
            <TableRow android:id="@+id/trow_text_or_html2">
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/open_as_html_add_info"
                            android:maxLines="5"
                            android:ellipsize="middle"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:singleLine="false"
                            />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:id="@+id/trow_from_stream1"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="#60808080"
					>
				<TextView
						android:layout_margin="5dp"
						style="@style/TextAppearance.Small"
						android:text="@string/external_doc_option1"
						android:textStyle="bold"
						android:singleLine="false"
						android:maxLines="3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="?attr/colorIcon"
						/>
			</TableRow>
			<TableRow android:id="@+id/trow_from_stream2">
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left"
						android:layout_weight="2"
						android:orientation="vertical">
					<Button
							android:id="@+id/btn_open_from_stream"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="@string/doc_open_from_stream"
							android:layout_margin="3dip"
							android:textColor="?attr/colorIcon"
							style="@style/TextAppearance.Widget.EditText"
							/>
					<TextView
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="@string/doc_open_from_stream_addinfo"
							android:maxLines="5"
							android:ellipsize="middle"
							style="@style/TextAppearance.Small"
							android:textColor="?attr/colorIcon"
							android:singleLine="false"
							/>
				</LinearLayout>
			</TableRow>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:id="@+id/trow_file_exists1"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="#60808080"
					>
				<TextView
						android:layout_margin="5dp"
						style="@style/TextAppearance.Small"
						android:text="@string/external_doc_option3"
						android:textStyle="bold"
						android:singleLine="false"
						android:maxLines="3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="?attr/colorIcon"
						/>
			</TableRow>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:id="@+id/trow_file_exists2"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left|center_vertical"
						android:layout_weight="1"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/lbl_existing_path"
							style="@style/TextAppearance.Small"
							android:singleLine="false"
							android:maxLines="3"
							android:text="@string/already_exists"
							android:textStyle="bold"
							android:textColor="?attr/colorIcon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</LinearLayout>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left"
						android:layout_weight="3"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/existing_path"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="download path"
							android:maxLines="5"
							android:ellipsize="middle"
							style="@style/TextAppearance.Small"
							android:textColor="?attr/colorIcon"
							android:singleLine="false"
							/>
				</LinearLayout>
			</TableRow>
			<TableRow android:id="@+id/trow_file_exists3"
					>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left"
						android:layout_weight="2"
						android:orientation="vertical">
					<Button
							android:id="@+id/btn_open_existing"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="@string/open_existing"
							android:layout_margin="3dip"
							android:textColor="?attr/colorIcon"
							style="@style/TextAppearance.Widget.EditText"
							/>
				</LinearLayout>
			</TableRow>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="#60808080"
					>
				<TextView
						android:layout_margin="5dp"
						style="@style/TextAppearance.Small"
						android:text="@string/external_doc_option2"
						android:textStyle="bold"
						android:singleLine="false"
						android:maxLines="3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="?attr/colorIcon"
						/>
			</TableRow>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left|center_vertical"
						android:layout_weight="1"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/lbl_download_path"
							style="@style/TextAppearance.Small"
							android:singleLine="false"
							android:maxLines="3"
							android:text="@string/download_path"
							android:textStyle="bold"
							android:textColor="?attr/colorIcon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</LinearLayout>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left"
						android:layout_weight="3"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/download_path"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="download path"
							android:maxLines="5"
							android:ellipsize="middle"
							style="@style/TextAppearance.Small"
							android:textColor="?attr/colorIcon"
							android:singleLine="false"
							/>
				</LinearLayout>
			</TableRow>
			<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_margin="2dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left|center_vertical"
						android:layout_weight="2"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/lbl_file_name"
							style="@style/TextAppearance.Small"
							android:singleLine="false"
							android:maxLines="5"
							android:text="@string/book_info_file_name"
							android:textColor="?attr/colorIcon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</LinearLayout>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left"
						android:layout_weight="5"
						android:orientation="horizontal">
					<EditText
							android:id="@+id/file_name"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="file_name"
							style="@style/TextAppearance.Widget.EditText"
							android:editable="true"
							android:singleLine="true"
							android:background="?attr/colorThemeGray2Contrast"
							android:textColor="?attr/colorIcon"
							/>
				</LinearLayout>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left|center_vertical"
						android:layout_weight="1"
						android:orientation="horizontal">
					<EditText
							android:id="@+id/file_ext"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="file_name"
							style="@style/TextAppearance.Widget.EditText"
							android:editable="true"
							android:singleLine="true"
							android:background="?attr/colorThemeGray2Contrast"
							android:textColor="?attr/colorIcon"
							/>
				</LinearLayout>
			</TableRow>
			<TableRow>
				<LinearLayout
						android:layout_width="0dip"
						android:layout_height="fill_parent"
						android:gravity="left"
						android:layout_weight="2"
						android:orientation="vertical">
					<Button
							android:id="@+id/btn_save"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="@string/doc_save_to_device"
							android:layout_margin="3dip"
							android:textColor="?attr/colorIcon"
							style="@style/TextAppearance.Widget.EditText"
							/>
				</LinearLayout>
			</TableRow>
		</TableLayout>
	</LinearLayout>
</ScrollView>
