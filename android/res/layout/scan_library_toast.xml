<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dic_toast_ll"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="?attr/attr_toast_layout_border"
              android:orientation="horizontal" android:gravity="center"
    >
    <TableLayout
        android:id="@+id/dic_table"
        style="@style/TextAppearance.Small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_weight="1"
        android:layout_margin="2dp"
        >
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tr_upper_row"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:id="@+id/upper_row_ll"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/books_title"
                        style="@style/TextAppearance.Small"
                        android:singleLine="false"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/entries"
                        android:textColor="?attr/colorIcon"
                        />
                <TextView
                        android:id="@+id/books_cnt"
                        style="@style/TextAppearance.Small"
                        android:singleLine="false"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="?attr/colorIcon"
                        />
                <TextView
                        android:id="@+id/authors_title"
                        style="@style/TextAppearance.Small"
                        android:singleLine="false"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/authors"
                        android:textColor="?attr/colorIcon"
                        />
                <TextView
                        android:id="@+id/authors_cnt"
                        style="@style/TextAppearance.Small"
                        android:singleLine="false"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="?attr/colorIcon"
                        />
                <TextView
                        android:id="@+id/series_title"
                        style="@style/TextAppearance.Small"
                        android:singleLine="false"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/series"
                        android:textColor="?attr/colorIcon"
                        />
                <TextView
                        android:id="@+id/series_cnt"
                        style="@style/TextAppearance.Small"
                        android:singleLine="false"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="?attr/colorIcon"
                        />
                <TextView
                        android:id="@+id/genres_title"
                        style="@style/TextAppearance.Small"
                        android:singleLine="false"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/genres"
                        android:textColor="?attr/colorIcon"
                        />
                <TextView
                        android:id="@+id/genres_cnt"
                        style="@style/TextAppearance.Small"
                        android:singleLine="false"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="?attr/colorIcon"
                        />
            </LinearLayout>
        </TableRow>
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tr_upper_row2"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:id="@+id/upper_row_ll2"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <Button
                        android:id="@+id/btn_interrupt"
                        style="@style/TextAppearance.Small"
                        android:singleLine="true"
                        android:layout_marginRight="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorIcon"
                        android:text="@string/interrupt"
                        />
                <TextView
                        android:id="@+id/percent_title"
                        style="@style/TextAppearance.Small"
                        android:singleLine="false"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_"
                        android:textColor="?attr/colorIcon"
                        />
            </LinearLayout>
        </TableRow>
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tr_upper_sep_row"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:id="@+id/left_stop_ll"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_margin="2dip"
                        android:id="@+id/sepRow"
                        />
            </LinearLayout>
        </TableRow>
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dic_row"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:id="@+id/dic_ll"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <org.coolreader.crengine.MaxHeightScrollView
                        android:id="@+id/dic_scrollV"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/scan_text"
                            style="@style/TextAppearance.Small"
                            android:singleLine="false"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorIcon"
                            />
                </org.coolreader.crengine.MaxHeightScrollView>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>