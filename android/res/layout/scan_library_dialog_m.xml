<?xml version="1.0" encoding="utf-8"?>
    <TableLayout android:id="@+id/tl_scan_library_dlg_m"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginLeft="4dip"
          android:layout_marginRight="4dip"
          android:stretchColumns="*"
          android:layout_weight="10"
            >

        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/trow_library_maintenance"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#60808080"
                />
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/trow_library_maintenance_button"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:orientation="horizontal"/>
        </TableRow>
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library_maint_may_need_bk"
                        android:maxLines="25"
                        android:ellipsize="middle"
                        style="@style/TextAppearance.Small"
                        android:textColor="?attr/colorIcon"
                        android:singleLine="false"
                        />
            </LinearLayout>
        </TableRow>

        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tl_maint_remove"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                <Button
                        android:id="@+id/btn_maint_remove"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library_maint_remove"
                        android:layout_margin="1dip"
                        android:textColor="?attr/colorIcon"
                        style="@style/TextAppearance.Widget.EditText"
                        />
            </LinearLayout>
        </TableRow>
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library_maint_remove_non_fav_add_info"
                        android:maxLines="25"
                        android:ellipsize="middle"
                        style="@style/TextAppearance.Small"
                        android:textColor="?attr/colorIcon"
                        android:singleLine="false"
                        />
            </LinearLayout>
        </TableRow>

        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                <Button
                        android:id="@+id/btn_maint_remove_orphans"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library_maint_remove_orphans"
                        android:layout_margin="1dip"
                        android:textColor="?attr/colorIcon"
                        style="@style/TextAppearance.Widget.EditText"
                        />
            </LinearLayout>
        </TableRow>
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library_maint_remove_orphans_add_info"
                        android:maxLines="25"
                        android:ellipsize="middle"
                        style="@style/TextAppearance.Small"
                        android:textColor="?attr/colorIcon"
                        android:singleLine="false"
                        />
            </LinearLayout>
        </TableRow>

        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                <Button
                        android:id="@+id/btn_maint_remove_cloud"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library_maint_remove_cloud"
                        android:layout_margin="1dip"
                        android:textColor="?attr/colorIcon"
                        style="@style/TextAppearance.Widget.EditText"
                        />
            </LinearLayout>
        </TableRow>
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library_maint_remove_cloud_add_info"
                        android:maxLines="25"
                        android:ellipsize="middle"
                        style="@style/TextAppearance.Small"
                        android:textColor="?attr/colorIcon"
                        android:singleLine="false"
                        />
            </LinearLayout>
        </TableRow>

        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                <Button
                        android:id="@+id/btn_maint_force_rescan"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library_maint_force_rescan_book_info"
                        android:layout_margin="1dip"
                        android:textColor="?attr/colorIcon"
                        style="@style/TextAppearance.Widget.EditText"
                        />
            </LinearLayout>
        </TableRow>
        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library_maint_force_rescan_book_info_add_info"
                        android:maxLines="25"
                        android:ellipsize="middle"
                        style="@style/TextAppearance.Small"
                        android:textColor="?attr/colorIcon"
                        android:singleLine="false"
                        />
            </LinearLayout>
        </TableRow>

        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tl_maint_show_statistics"
                android:layout_margin="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                <Button
                        android:id="@+id/btn_maint_show_statistics"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library_maint_show_statistics"
                        android:layout_margin="1dip"
                        android:textColor="?attr/colorIcon"
                        style="@style/TextAppearance.Widget.EditText"
                        />
            </LinearLayout>
        </TableRow>
    </TableLayout>
