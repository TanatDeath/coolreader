<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
	>
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:padding="4dip">
			<View
				android:layout_width="58dip"
	            android:layout_weight="8"
				android:layout_height="fill_parent"
				android:layout_marginLeft="6dip"
				android:layout_marginTop="8dip"
				android:layout_marginBottom="8dip"
				android:id="@+id/preview"
			/>
  	       <TextView android:id="@+id/value_label"
    	        style="@style/TextAppearance.Small"
	            android:layout_width="wrap_content"
	            android:layout_weight="2"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:layout_gravity="bottom" />
  		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="8dip"
		>
			<SeekBar
	            android:minWidth="200dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/r"
				android:max="255"
				android:padding="4dip"
				android:thumb="@drawable/seekbar_thumb"
			/>
			<SeekBar
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/g"
				android:max="255"
				android:padding="4dip"
				android:thumb="@drawable/seekbar_thumb"
			/>
			<SeekBar
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/b"
				android:max="255"
				android:padding="4dip"
				android:thumb="@drawable/seekbar_thumb"
			/>
			<SeekBar
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/value"
				android:max="63"
				android:padding="4dip"
				android:thumb="@drawable/seekbar_thumb"
			/>
			<SeekBar
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/hue"
				android:max="119"
				android:padding="4dip"
				android:thumb="@drawable/seekbar_thumb"
			/>
			<SeekBar
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/saturation"
				android:max="63"
				android:padding="4dip"
				android:thumb="@drawable/seekbar_thumb"
			/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/page_item_body"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<EditText
			android:id="@+id/search_text"
			android:layout_width="0dip" android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_marginTop="3dip"
			android:layout_marginBottom="3dip"
			android:layout_marginLeft="2dip"
			android:layout_marginRight="2dip"
			android:text=""
			style="@style/TextAppearance.Widget.EditText"
			android:editable="true" android:hint="@string/dlg_search_hint" android:singleLine="true"
			/>
		<ImageButton android:id="@+id/btn_search"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="3dip"
			android:layout_marginBottom="3dip"
			android:layout_marginLeft="2dip"
			android:layout_marginRight="2dip"
			android:src="?attr/cr3_button_cancel_drawable"
                        android:tag="tint"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:background="@null"
			/>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/color_list"
		android:orientation="vertical"
		android:layout_weight="8"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:baselineAligned="false"
		android:layout_marginTop="8dip"
		android:layout_marginBottom="8dip"
		android:layout_marginLeft="4dip"
		android:layout_marginRight="4dip"
		>

	</LinearLayout>
</LinearLayout>
