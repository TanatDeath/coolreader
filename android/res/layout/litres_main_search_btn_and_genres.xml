<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tr_litres_search_btn_and_genres"
        android:layout_margin="2dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:layout_weight="2"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:orientation="horizontal">
        <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/do_search"
                android:layout_margin="3dip"
                android:textColor="?attr/colorIcon"
                android:textStyle="bold"
                style="@style/TextAppearance.Widget.EditText"
                />
        <Button
                android:id="@+id/btn_search_all_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_genres_all"
                android:layout_margin="3dip"
                android:textColor="?attr/colorIcon"
                android:textStyle="bold"
                style="@style/TextAppearance.Widget.EditText"
                />
    </LinearLayout>
</TableRow>