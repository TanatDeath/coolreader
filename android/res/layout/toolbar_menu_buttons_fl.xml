<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_toolbar_menu_buttons"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true">

    <TableLayout
            android:id="@+id/group_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:orientation="vertical">

        <TableRow
                android:layout_weight="1"
                >
            <Button
                    android:id="@+id/group_num_1"
                    android:layout_width="0dip"
                    android:checked="true"
                    android:layout_weight="1"
                    android:tag="tint"
                    android:contentDescription="1"
                    android:textColor="?attr/colorIcon"
                    android:text="1" />
            <Button
                    android:id="@+id/group_num_2"
                    android:layout_width="0dip"
                    android:checked="true"
                    android:layout_weight="1"
                    android:tag="tint"
                    android:contentDescription="2"
                    android:textColor="?attr/colorIcon"
                    android:text="2" />
            <Button
                    android:id="@+id/group_num_3"
                    android:layout_width="0dip"
                    android:checked="true"
                    android:layout_weight="1"
                    android:tag="tint"
                    android:contentDescription="3"
                    android:textColor="?attr/colorIcon"
                    android:text="3" />
            <Button
                    android:id="@+id/group_num_4"
                    android:layout_width="0dip"
                    android:checked="true"
                    android:layout_weight="1"
                    android:tag="tint"
                    android:contentDescription="4"
                    android:textColor="?attr/colorIcon"
                    android:text="4" />
            <Button
                    android:id="@+id/group_num_5"
                    android:layout_width="0dip"
                    android:checked="true"
                    android:layout_weight="1"
                    android:tag="tint"
                    android:contentDescription="5"
                    android:textColor="?attr/colorIcon"
                    android:text="5" />
            <Button
                    android:id="@+id/group_num_6"
                    android:layout_width="0dip"
                    android:checked="true"
                    android:layout_weight="1"
                    android:tag="tint"
                    android:contentDescription="6"
                    android:textColor="?attr/colorIcon"
                    android:text="6" />
            <Button
                    android:id="@+id/group_num_7"
                    android:layout_width="0dip"
                    android:checked="true"
                    android:layout_weight="1"
                    android:tag="tint"
                    android:contentDescription="7"
                    android:textColor="?attr/colorIcon"
                    android:text="7" />
            <Button
                    android:id="@+id/group_num_8"
                    android:layout_width="0dip"
                    android:checked="true"
                    android:layout_weight="1"
                    android:tag="tint"
                    android:contentDescription="8"
                    android:textColor="?attr/colorIcon"
                    android:text="8" />
            <Button
                    android:id="@+id/group_num_9"
                    android:layout_width="0dip"
                    android:checked="true"
                    android:layout_weight="1"
                    android:tag="tint"
                    android:contentDescription="9"
                    android:textColor="?attr/colorIcon"
                    android:text="9" />
            <Button
                    android:id="@+id/group_num_10"
                    android:layout_width="0dip"
                    android:checked="true"
                    android:layout_weight="1"
                    android:tag="tint"
                    android:contentDescription="10"
                    android:textColor="?attr/colorIcon"
                    android:text="10" />
        </TableRow>
    </TableLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_add_buttons"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:baselineAligned="true">
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorIcon"
            android:layout_margin="5dp"
            android:text="@string/clear"
            />
        <Button
            android:id="@+id/btn_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorIcon"
            android:layout_margin="5dp"
            android:text="@string/def"
            />
    </LinearLayout>
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/base_dialog"
            android:orientation="vertical"
            android:minHeight="1600dip"
            android:minWidth="1600dip"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <org.coolreader.layouts.FlowLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fl_toolbar_menu_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:orientation="vertical"
                app:horizontalSpacing="5dip"
                app:verticalSpacing="5dip"
                />
    </ScrollView>
</LinearLayout>