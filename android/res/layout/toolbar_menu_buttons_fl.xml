<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_toolbar_menu_buttons"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_add_buttons"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:baselineAligned="true">
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorIcon"
            android:layout_margin="5dp"
            android:text="@string/clear"
            />
        <Button
            android:id="@+id/btn_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorIcon"
            android:layout_margin="5dp"
            android:text="@string/def"
            />
    </LinearLayout>
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/base_dialog"
            android:orientation="vertical"
            android:minHeight="1600dip"
            android:minWidth="1600dip"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <org.coolreader.layouts.FlowLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fl_toolbar_menu_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:orientation="vertical"
                app:horizontalSpacing="5dip"
                app:verticalSpacing="5dip"
                />
    </ScrollView>
</LinearLayout>