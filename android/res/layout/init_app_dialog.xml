<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginRight="?android:attr/scrollbarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*" >

    <LinearLayout android:id="@+id/ll_init_app_dlg"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip">
        <TableLayout android:id="@+id/tl_init_app_dlg"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:stretchColumns="1"
                android:layout_weight="10"
                >

            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <Button
                            android:id="@+id/btn_clear_cache"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/init_app_clear_cache"
                            android:layout_margin="1dip"
                            android:textColor="?attr/colorIcon"
                            style="@style/TextAppearance.Widget.EditText"
                            />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="3"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/init_app_clear_cache_add_info"
                            android:maxLines="25"
                            android:ellipsize="middle"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:singleLine="false"
                            />
                </LinearLayout>
            </TableRow>

            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <Button
                            android:id="@+id/btn_clear_settings"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/init_app_clear_settings"
                            android:layout_margin="1dip"
                            android:textColor="?attr/colorIcon"
                            style="@style/TextAppearance.Widget.EditText"
                            />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="3"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/init_app_clear_settings_add_info"
                            android:maxLines="25"
                            android:ellipsize="middle"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:singleLine="false"
                            />
                </LinearLayout>
            </TableRow>

            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <Button
                            android:id="@+id/btn_clear_db"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/init_app_clear_db"
                            android:layout_margin="1dip"
                            android:textColor="?attr/colorIcon"
                            style="@style/TextAppearance.Widget.EditText"
                            />
                </LinearLayout>
            </TableRow>
            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="3"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/init_app_clear_db_add_info"
                            android:maxLines="25"
                            android:ellipsize="middle"
                            style="@style/TextAppearance.Small"
                            android:textColor="?attr/colorIcon"
                            android:singleLine="false"
                            />
                </LinearLayout>
            </TableRow>

            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <Button
                            android:id="@+id/btn_perform_selected"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/do_init_app"
                            android:layout_margin="1dip"
                            android:textStyle="bold"
                            android:textColor="?attr/colorIcon"
                            style="@style/TextAppearance.Widget.EditText"
                            />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>