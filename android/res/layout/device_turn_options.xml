<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:stretchColumns="*">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_gravity="fill_vertical|fill_horizontal"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:stretchColumns="*"
        >
        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/expl_text"
                        android:text="@string/device_turn_explain"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <LinearLayout
                android:id="@+id/ll_device_turn_coord1"
                style="@style/TapZoneGridCell"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_device_turn_coord1"
                        android:text="_"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_device_turn_coord2"
                style="@style/TapZoneGridCell"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_device_turn_coord2"
                        android:text="_"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_device_turn_coord3"
                style="@style/TapZoneGridCell"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_device_turn_coord3"
                        android:text="_"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                 android:layout_width="match_parent">
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <Button
                        android:id="@+id/fix_turn"
                        android:text="@string/device_page_turn_fix"
                        android:layout_margin="0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorIcon"
                        style="@style/TextAppearance.Widget.EditText"
                        />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord1_fix"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_device_turn_coord1_fix"
                        android:text="_"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord2_fix"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_device_turn_coord2_fix"
                        android:text="_"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord3_fix"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_device_turn_coord3_fix"
                        android:text="_"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/device_page_turn_fix_use_explain_turn"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord1_fix_use"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView android:id="@+id/iv_device_turn_coord1_fix_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dip"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dip"
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord2_fix_use"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView android:id="@+id/iv_device_turn_coord2_fix_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dip"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dip"
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord3_fix_use"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView android:id="@+id/iv_device_turn_coord3_fix_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dip"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dip"
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <Button
                        android:id="@+id/fix_turn_back"
                        android:text="@string/device_page_turn_back_fix"
                        android:layout_margin="0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorIcon"
                        style="@style/TextAppearance.Widget.EditText"
                        />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord1_fix_back"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_device_turn_coord1_fix_back"
                        android:text="_"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord2_fix_back"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_device_turn_coord2_fix_back"
                        android:text="_"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord3_fix_back"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_device_turn_coord3_fix_back"
                        android:text="_"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/device_page_turn_fix_use_explain_turn_back"
                        style="@style/TextAppearance.Medium"
                        android:layout_margin="2dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord1_fix_back_use"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView android:id="@+id/iv_device_turn_coord1_fix_back_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dip"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dip"
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord2_fix_back_use"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView android:id="@+id/iv_device_turn_coord2_fix_back_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dip"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dip"
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_device_turn_coord3_fix_back_use"
                    style="@style/TapZoneGridCell"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView android:id="@+id/iv_device_turn_coord3_fix_back_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dip"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dip"
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                    android:text="@string/device_page_turn_precision"
                    style="@style/TextAppearance.Medium"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />
            <SeekBar android:id="@+id/seek_precision"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="2dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:max="100"
                android:progress="10"
                android:progressDrawable="@drawable/seekbar_progressbar"
                android:thumb="@drawable/seekbar_thumb"
                />

        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
            <TextView
                    android:text="@string/device_page_turn_test_expl"
                    style="@style/TextAppearance.Medium"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>
        <LinearLayout
                style="@style/TapZoneGridCell"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_test_area"
                    android:text="1000"
                    style="@style/TextAppearance.Large"
                    android:layout_margin="2dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />
        </LinearLayout>
    </LinearLayout>
</ScrollView>