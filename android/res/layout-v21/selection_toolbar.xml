<?xml version="1.0" encoding="utf-8"?>
<!--
   Option item layout for CR3 options dialog
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sel_body"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:background="?attr/colorThemeGray2"
	android:layout_marginTop="3dip"
	android:layout_marginBottom="3dip"
	android:layout_marginLeft="3dip"
	android:layout_marginRight="3dip"
    android:baselineAligned="true"
    >

	<org.coolreader.layouts.FlowLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="1dip"
			android:paddingLeft="3dip"
			android:paddingRight="3dip"
			android:id="@+id/recentDics"
			android:orientation="vertical"
			/>

	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:baselineAligned="true"
	    >
	
	    <ImageButton android:id="@+id/selection_copy"
            android:layout_width="0dip" android:layout_weight="3"
	        android:layout_height="match_parent"
	        android:src="?attr/attr_icons8_copy"
                android:tag="tint"
            android:minHeight="?android:attr/listPreferredItemHeight"
			android:minWidth="?android:attr/listPreferredItemHeight"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        android:contentDescription="@string/options_selection_action_copy"/>
	    <ImageButton android:id="@+id/selection_dict"
            android:layout_width="0dip" android:layout_weight="3"
	        android:layout_height="match_parent"
            android:src="?attr/attr_icons8_google_translate"
            android:tag="tint"
            android:minHeight="?android:attr/listPreferredItemHeight"
			android:minWidth="?android:attr/listPreferredItemHeight"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        android:contentDescription="@string/options_selection_action_dictionary"/>
	    <ImageButton android:id="@+id/selection_bookmark"
            android:layout_width="0dip" android:layout_weight="3"
	        android:layout_height="match_parent"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        android:src="?attr/attr_icons8_bookmark_simple"
                android:tag="tint"
	        android:contentDescription="@string/options_selection_action_bookmark"/>
        <ImageButton android:id="@+id/selection_email"
            android:layout_width="0dip" android:layout_weight="3"
            android:layout_height="match_parent"
            android:minHeight="?android:attr/listPreferredItemHeight"
			android:minWidth="?android:attr/listPreferredItemHeight"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:src="?attr/attr_icons8_share"
            android:tag="tint"
	        android:contentDescription="@string/options_selection_action_mail"/>
        <ImageButton android:id="@+id/selection_find"
            android:layout_width="0dip" android:layout_weight="3"
            android:layout_height="match_parent"
            android:minHeight="?android:attr/listPreferredItemHeight"
			android:minWidth="?android:attr/listPreferredItemHeight"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:src="?attr/cr3_viewer_find_drawable"
            android:tag="tint"
	        android:contentDescription="@string/dlg_button_find"/>
        <ImageButton android:id="@+id/selection_cancel"
            android:layout_width="0dip" android:layout_weight="3"
	        android:layout_height="match_parent"
            android:minHeight="?android:attr/listPreferredItemHeight"
			android:minWidth="?android:attr/listPreferredItemHeight"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        android:src="?attr/cr3_viewer_exit_drawable"
                android:tag="tint"
	        android:contentDescription="@string/dlg_button_cancel"/>
		<ImageButton android:id="@+id/selection_more"
				android:layout_width="0dip" android:layout_weight="1"
				android:layout_height="match_parent"
				android:minHeight="?android:attr/listPreferredItemHeight"
				android:minWidth="?android:attr/listPreferredItemHeight"
				android:layout_marginTop="2dip"
				android:layout_marginBottom="2dip"
				android:layout_marginLeft="1dip"
				android:layout_marginRight="1dip"
				android:src="?attr/cr3_button_more_drawable"
				android:tag="tint"/>
	</LinearLayout>
	<TableLayout
		android:id="@+id/rg_type"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		>
		<TableRow>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="3"
				android:baselineAligned="true"
				android:gravity="center_vertical"
				android:layout_marginBottom="2dp"
				android:layout_marginLeft="15dp"
				>
				<ImageButton android:id="@+id/btn_prev_sent1"
						style="@style/TextAppearance.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="?attr/attr_icons8_plus_plus_small"
						android:tag="tint"
						android:background="?attr/colorThemeGray2"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
				/>
				<ImageButton android:id="@+id/btn_prev1"
					style="@style/TextAppearance.Small"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="?attr/attr_icons8_plus_small"
                                        android:tag="tint"
					android:background="?attr/colorThemeGray2"
					android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip"
					android:layout_marginLeft="2dip"
					android:layout_marginRight="2dip"
				/>
				<SeekBar android:id="@+id/selection_left_bound_control"
					android:layout_height="wrap_content"
					android:layout_width="2dip" android:layout_weight="1"
					android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip"
					android:layout_marginLeft="2dip"
					android:layout_marginRight="2dip"
					android:max="100"
					android:progress="50"
					android:progressDrawable="@drawable/seekbar_progressbar"
					android:thumb="@drawable/seekbar_thumb"
				/>
				<ImageButton android:id="@+id/btn_next1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="?attr/colorThemeGray2Contrast"
                                        android:tag="tint"
					android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip"
					android:layout_marginLeft="2dip"
					android:layout_marginRight="2dip"
					android:src="?attr/attr_icons8_minus_small"
				/>
				<ImageButton android:id="@+id/btn_next_sent1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="?attr/colorThemeGray2Contrast"
						android:tag="tint"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
						android:src="?attr/attr_icons8_minus_minus_small"
				/>
			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:baselineAligned="true"
				android:gravity="center"
				android:layout_marginBottom="2dp"
				>
				<TextView
						style="@style/TextAppearance.Medium"
						android:id="@+id/sel_beg"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:singleLine="false"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:maxLines="1"
						android:ellipsize="end"
						android:layout_centerVertical="true"
						android:text="@string/sel_start"
						android:textColor="?attr/colorIcon"
						android:gravity="center"
						/>
			</LinearLayout>
		</TableRow>
		<TableRow>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:baselineAligned="true"
					android:layout_gravity="right"
					android:layout_marginBottom="15dp"
					android:gravity="center"
					>
				<TextView
						style="@style/TextAppearance.Medium"
						android:id="@+id/sel_end"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:singleLine="false"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:maxLines="1"
						android:ellipsize="end"
						android:layout_centerVertical="true"
						android:text="@string/sel_end"
						android:textColor="?attr/colorIcon"
						android:gravity="center"
						/>
			</LinearLayout>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:baselineAligned="true"
					android:gravity="center_vertical"
					android:layout_marginBottom="15dp"
					android:layout_marginRight="15dp"
					>
				<ImageButton android:id="@+id/btn_prev_sent2"
						style="@style/TextAppearance.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="?attr/attr_icons8_minus_minus_small"
						android:tag="tint"
						android:background="?attr/colorThemeGray2"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
						/>
				<ImageButton android:id="@+id/btn_prev2"
						style="@style/TextAppearance.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="?attr/attr_icons8_minus_small"
						android:tag="tint"
						android:background="?attr/colorThemeGray2"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
						/>
				<SeekBar android:id="@+id/selection_right_bound_control"
						android:layout_height="wrap_content"
						android:layout_width="0dip" android:layout_weight="1"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
						android:max="100"
						android:progress="50"
						android:progressDrawable="@drawable/seekbar_progressbar"
						android:thumb="@drawable/seekbar_thumb"
						/>
				<ImageButton android:id="@+id/btn_next2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="?attr/colorThemeGray2Contrast"
						android:tag="tint"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
						android:src="?attr/attr_icons8_plus_small"
						/>
				<ImageButton android:id="@+id/btn_next_sent2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="?attr/colorThemeGray2Contrast"
						android:tag="tint"
						android:layout_marginTop="2dip"
						android:layout_marginBottom="2dip"
						android:layout_marginLeft="2dip"
						android:layout_marginRight="2dip"
						android:src="?attr/attr_icons8_plus_plus_small"
						/>
			</LinearLayout>
		</TableRow>
	</TableLayout>
</LinearLayout>
